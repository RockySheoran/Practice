# ===== Database Configuration =====
POSTGRES_USER=lifeflow
POSTGRES_PASSWORD=dev_password_change_in_production
POSTGRES_DB=lifeflow_dev

# ===== RabbitMQ Configuration =====
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672

# ===== Redis Configuration =====
REDIS_HOST=redis
REDIS_PORT=6379

# ===== API Gateway Configuration =====
API_GATEWAY_PORT=8000
ENABLE_DEBUG=false

# ===== Authentication Configuration =====
JWT_SECRET=your_super_secret_jwt_key_change_in_production_use_32_chars_minimum
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=7

# ===== Service Configuration =====
IDENTITY_SERVICE_PORT=8001
DONOR_SERVICE_PORT=8002
INVENTORY_SERVICE_PORT=8003
REQUEST_SERVICE_PORT=8004
GEOLOCATION_SERVICE_PORT=8005
NOTIFICATION_SERVICE_PORT=8006
CAMP_SERVICE_PORT=8007
ANALYTICS_SERVICE_PORT=8008

# ===== Email Configuration (Mailhog for dev) =====
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=dev
MAIL_PASSWORD=dev
MAIL_FROM=noreply@lifeflow.example.com

# ===== SendGrid Configuration (Production) =====
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@lifeflow.example.com

# ===== Twilio Configuration (SMS) =====
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ===== Firebase Configuration (Push Notifications) =====
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# ===== Google Maps Configuration =====
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
GEOFENCE_RADIUS_KM=5

# ===== AWS Configuration =====
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=lifeflow-backups

# ===== Encryption Configuration =====
ENCRYPTION_KEY=your_encryption_key_32_chars_minimum_change_in_production
ENCRYPTION_IV=your_initialization_vector

# ===== Logging Configuration =====
LOG_LEVEL=INFO
LOG_FORMAT=JSON

# ===== Feature Flags =====
ENABLE_GAMIFICATION=true
ENABLE_VEIN_TO_VEIN_TRACKING=true
ENABLE_GEOFENCED_SOS=true
ENABLE_PREDICTIVE_ANALYTICS=false

# ===== Performance Configuration =====
DATABASE_POOL_SIZE=20
MAX_CONCURRENT_REQUESTS=1000
CACHE_TTL_MINUTES=60

# ===== Compliance Configuration =====
DATA_RETENTION_YEARS=7
GDPR_ENABLED=true
HIPAA_ENABLED=false

# ===== Development Configuration =====
ENVIRONMENT=development
DEBUG_ENABLED=false
MOCK_EXTERNAL_SERVICES=false
SEED_TEST_DATA=true
