# LifeFlow Blood Donation System - Environment Configuration
# Copy this file to .env and update the values as needed

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Identity Service Database
IDENTITY_DB_USER=identity_user
IDENTITY_DB_PASSWORD=identity_secure_password_123

# Donor Service Database
DONOR_DB_USER=donor_user
DONOR_DB_PASSWORD=donor_secure_password_123

# Hospital Service Database
HOSPITAL_DB_USER=hospital_user
HOSPITAL_DB_PASSWORD=hospital_secure_password_123

# Inventory Service Database
INVENTORY_DB_USER=inventory_user
INVENTORY_DB_PASSWORD=inventory_secure_password_123

# Request Service Database
REQUEST_DB_USER=request_user
REQUEST_DB_PASSWORD=request_secure_password_123

# Geolocation Service Database
GEOLOCATION_DB_USER=geolocation_user
GEOLOCATION_DB_PASSWORD=geolocation_secure_password_123

# Notification Service Database
NOTIFICATION_DB_USER=notification_user
NOTIFICATION_DB_PASSWORD=notification_secure_password_123

# Camp Service Database
CAMP_DB_USER=camp_user
CAMP_DB_PASSWORD=camp_secure_password_123

# Analytics Service Database
ANALYTICS_DB_USER=analytics_user
ANALYTICS_DB_PASSWORD=analytics_secure_password_123

# Gamification Service Database
GAMIFICATION_DB_USER=gamification_user
GAMIFICATION_DB_PASSWORD=gamification_secure_password_123

# ===========================================
# INFRASTRUCTURE CONFIGURATION
# ===========================================

# Redis Configuration
REDIS_PASSWORD=redis_secure_password_123

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-that-should-be-at-least-256-bits-long
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# ===========================================
# EXTERNAL SERVICES CONFIGURATION
# ===========================================

# Email Service (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@lifeflow.com
SENDGRID_FROM_NAME=LifeFlow System

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notification Service (Firebase)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-firebase-private-key-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_CLIENT_ID=your-firebase-client-id

# WhatsApp Business API
WHATSAPP_BUSINESS_ACCOUNT_ID=your-whatsapp-business-account-id
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-phone-number-id

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ===========================================
# MONITORING CONFIGURATION
# ===========================================

# Grafana Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin_secure_password_123

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================

# Application Environment
SPRING_PROFILES_ACTIVE=docker
LOG_LEVEL=INFO

# API Gateway Configuration
API_GATEWAY_PORT=8080
API_GATEWAY_RATE_LIMIT=1000

# Service Ports
IDENTITY_SERVICE_PORT=8081
DONOR_SERVICE_PORT=8082
HOSPITAL_SERVICE_PORT=8083
INVENTORY_SERVICE_PORT=8084
REQUEST_SERVICE_PORT=8085
GEOLOCATION_SERVICE_PORT=8086
NOTIFICATION_SERVICE_PORT=8087
CAMP_SERVICE_PORT=8088
ANALYTICS_SERVICE_PORT=8089
GAMIFICATION_SERVICE_PORT=8090

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# ===========================================
# BUSINESS CONFIGURATION
# ===========================================

# Blood Donation Rules
MINIMUM_DONATION_INTERVAL_DAYS=90
MINIMUM_DONOR_AGE=18
MAXIMUM_DONOR_AGE=65
MINIMUM_DONOR_WEIGHT_KG=50

# Blood Bag Configuration
BLOOD_BAG_EXPIRY_DAYS=35
BLOOD_BAG_VOLUME_ML=450
LOW_STOCK_THRESHOLD=5
CRITICAL_STOCK_THRESHOLD=2

# Emergency Response Configuration
EMERGENCY_RESPONSE_RADIUS_KM=25
EMERGENCY_NOTIFICATION_TIMEOUT_MINUTES=30
MAX_EMERGENCY_NOTIFICATIONS_PER_REQUEST=50

# Gamification Configuration
BASE_POINTS_PER_DONATION=100
EMERGENCY_DONATION_BONUS=50
REFERRAL_BONUS=25
RARE_BLOOD_TYPE_MULTIPLIER=1.5

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================

# Debug Configuration (Development Only)
DEBUG_MODE=false
ENABLE_SWAGGER=true
ENABLE_ACTUATOR_ENDPOINTS=true

# Test Configuration
TEST_DATA_ENABLED=false
MOCK_EXTERNAL_SERVICES=false